<% content_for :index do %>
    <%= '... with a name .com hipsters love' %>
<% end %>
<h1>All the World's Articles</h1>

<%= link_to 'Create an Article', new_article_path %>

<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Body</th>
    <th>Created at</th>
    <th>Edits</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @articles.each do |article| %>
  <tr>
    <td><%= article.title %></td>
    <td><%= article.author %></td>
    <td><%= article.body %></td>
    <td><%= article.created_at.strftime("%a, %b. %d %Y") %></td>
    <td><%= article.n_edited %></td>
    <td><%= link_to 'Show', article %></td>
    <td><%= link_to 'Edit', edit_article_path(article) %></td>
    <td><%= link_to 'Destroy', article, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>


