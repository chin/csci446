<h1>Listing authors</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @authors.each do |author| %>
  <tr>
    <td><%= author.name %></td>
    <td><%= link_to image_tag('icons/zoom.png'), author, :title => 'show author' %></td>
    <td><%=  link_to image_tag('icons/pencil.png'), edit_author_path(author), :title => 'edit article' %></td>
    <td><%= link_to image_tag('icons/weather_lightning.png'), author, :confirm => 'Are you sure?', :method => :delete, :title => 'delete author' %></td>
  </tr>
<% end %>
</table>

