<% content_for :index do %>
    <%= '... with a name .com hipsters love' %>
<% end %>
<br><br>
<h1>All the World's Articles</h1>

<%= link_to image_tag('icons/add.png') + 'create an article', new_article_path, :title => 'new article' %>
<br><br>
<%= will_paginate @articles %>
<table id="articles_list">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Body</th>
      <th>Created at</th>
      <th></th>
    </tr>
  </thead>
  
  <tfoot>
    <tr>
    <td colspan="5">
      <p><%= pluralize(@articles.size, 'article') %>.</p>
    </td>
    </tr>
  </tfoot>
  
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%=h article.title %></td>
        <td><%=h article.author.name %></td>
        <td><%= truncate(article.body, :length => 40) %></td>
        <td><%= article.created_at.strftime("%a, %b. %d %Y") %></td>
        <td><%= link_to image_tag('icons/zoom.png'), article, :title => 'show article' %><%= link_to image_tag('icons/pencil.png'), edit_article_path(article), :title => 'edit article' %><%= link_to image_tag('icons/weather_lightning.png'), article, :confirm => 'Are you sure?', :method => :delete, :title => 'delete article' %></td>
      </tr>
    <% end %>
  </tbody>

</table>
<%= will_paginate @articles %>