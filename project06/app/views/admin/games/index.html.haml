%h1 Listing games
%p#notice= notice
%p#alert= alert
  = "#{@games.count} Total Games"
= link_to 'Add a game', new_admin_game_path
%p
  = will_paginate @games
%table
  %tr
    %th.name Name
    %th.rating Rating
    %th.date Date created
  - @games.each do |game|
    %tr
      %td.name= position(game)
      %td.rating= kinkyness(game)
      %td.date= date(game)