%h1 Listing users
%p#notice= notice
%p
  = will_paginate @users
%table
  %tr
    %th Name
    %th Username
    %th Last Login
    %th Number of Games
  - @users.each do |user|
    %tr
      %td= link_to user.first_name + ' ' + user.last_name, edit_admin_user_path(user)
      %td= user.username
      %td= last_login(user)
      %td= user.games.count